<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/valider.css">
    <title>Valider_transfert</title>
</head>
<body>
    <nav class="nav">
        <div class="navbar">
            <% if (typeof data !="undefined" && (data.nom || data.prenom )) { %>
            <div class="logo">
                <a href="/historique">
                    <p>NITA</p>
          <p>transfert d'argent</p>
                </a>
            </div>
            <div class="Image">
                <div class="image">
                    <img src="/images/PngItem.png" alt="">
                </div>
                <p> <%= data.nom %> </p>
            </div>
            <div class="main_list" id="mainListDiv">
                <ul>
                    <li class="images">
                        <div class="image">
                            <img src="/images/PngItem.png" alt="">
                        </div>
                        <p> <%= data.nom %>   <%= data.prenom %> </p>
                       
                    </li>
                    <li><a href="#">A propos</a></li>
                    <li onclick="logout()"><a href="/logout">deconnecter</a></li>
                </ul>
            </div>
            <div class="media_button">
                <button class="main_media_button" id="mediaButton">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
            <% }%>
        </div>
    </nav>
    <div class="container">
       
        <div class="container-content">
            <div class="content">
                <% if (success =='') { %>
                    <div class="noresult">
                      <p>Aucun resultat trouvé(s) !</p>
                    </div>
                <% } else if (success ){%>
                    <% success.forEach(function(user){ %>
                <div class="infoperso">
                    <h4>INFORMATION PERSONNELLE</h4>
                    <div class="contenu">
                        <p>Nom : <span><%= user.nom %></span> </p>
                    </div>
                    <div class="contenu">
                        <p>Prenom : <span><%= user.prenom %></span> </p>
                    </div>
                    <div class="contenu">
                        <p>Email : <span><%= user.email %></span> </p>
                    </div>
                    <div class="contenu">
                        <p>Numéro : <span><%= user.numero %></span> </p>
                    </div>
                </div>
                <% }); %>
                <% } %>
                <div class="trait_dessus"></div>
                <div class="infoperso">
                    <h4>INFORMATION DU DESTINATAIRE </h4>
                    <div class="contenu">
                        <% if (typeof data !="undefined" && data.nom) { %>
                            <p>Nom : <span><%= data.nom %></span> </p>
                         <% }%>
                        
                    </div>
                    <div class="contenu">
                        <% if (typeof data !="undefined" && data.prenom) { %>
                            <p>Prenom : <span><%= data.prenom %></span> </p>
                         <% }%>
                        
                    </div>
                    <div class="contenu">
                        <% if (typeof data !="undefined" && data.numero) { %>
                            <p>Numéro : <span><%= data.numero %></span> </p>
                        <% }%>
                       
                    </div>
                </div>
                <div class="trait_dessus"></div>
                <div class="infoperso">
                    <h4>INFORMATION DU TRANSFERT </h4>
                    <div class="contenu">
                        <% if (typeof data !="undefined" && data.montant) { %>
                            <p>Montant Envoyé : <span><%= data.montant %> F CFA</span> </p>
                        <% }%>
                        
                    </div>
                    <div class="contenu">
                        <% if (typeof data !="undefined" && data.montant_recu) { %>
                            <p>Montant Reçu : <span><%= data.montant_recu %> F CFA</span> </p>
                        <% }%>
                        
                    </div>
                    <div class="contenu">
                        <% if (typeof data !="undefined" && data.frais) { %>
                            <p>Frais de Transfert : <span><%= data.frais %> F CFA</span> </p>
                        <% }%>
                        
                    </div>
                </div>
                <form action="/confirmer_le_transfert" method="post">
                    <% if (typeof data !="undefined" && data.numero) { %>
                        <input type="hidden" name="numero_transfert" value="<%= data.numero %> ">
                    <% }%>

                    <% if (typeof data !="undefined" && data.montant_recu) { %>
                        <input type="hidden" name="montant_recu" value="<%= data.montant_recu %> ">
                    <% }%>

                    <% if (typeof data !="undefined" && data.numero_user) { %>
                        <input type="hidden" name="numero_user" value="<%= data.numero_user%> ">
                    <% }%>
                    <% if (typeof data !="undefined" && data.nom) { %>
                        <input type="hidden" name="nom_transfert" value="<%= data.nom%> ">
                    <% }%>
                    <% if (typeof data !="undefined" && data.montant) { %>
                        <input type="hidden" name="montant" value=" <%= data.montant %> ">
                        <% }%>
                    <input type="hidden" name="type_transaction" value="transfert">
                    <div class="btn">
                        <button>Valider</button>
                    </div>
                </form>
            </div>
        </div>
         
    </div>
  <script src="/javascripts/app.js"></script>

</body>
</html>