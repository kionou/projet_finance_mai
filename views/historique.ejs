                </div>
                <div class="prix">
                    <p>1000000 F FCFA</p>
                    <a href="#">Détail</a>
                </div>
            </div>
                <div class="contenu">
                    <div class="detail">
                        <p>A kionou 0757408303</p>
                        <span>28 janvier 2022,21:33</span>
                    </div>
                    <div class="prix">
                        <p>1000000 F FCFA</p>
                        <a href="#">Détail</a>
                    </div>
                </div>
        </div>
        <div class="infouser">
           
            <% if (success =='') { %>
                <div class="noresult">
                  <p>Aucun resultat trouvé(s) !</p>
                </div>
            <% } else if (success ){%>
                <% success.forEach(function(user){ %>
            <div class="solde">
                <p><%= user.solde %> F CFA</p>
            </div>
            <div id="contenu">
                <p class="un">Nom: </p>
                <p class="deux"><%= user.nom %></p>
            </div>
            <div id="contenu">
                <p class="un">Prenom: </p>
                <p class="deux"><%= user.prenom %></p>
            </div>
            <div id="contenu">
                <p class="un">Email: </p>
                <p class="deux"><%= user.email %></p>
            </div>
            <div id="contenu">
                <p class="un">Numéro: </p>
                <p class="deux"><%= user.numero %></p>
            </div>
            <% }); %>
            <% } %>
        </div>
       </div>
    </div>
  <script src="/javascripts/app.js"></script>
</body>
</html>